# Yandex.Disk OAuth Token
# Get your token from: https://oauth.yandex.ru/authorize?response_type=token&client_id=YOUR_CLIENT_ID
YANDEX_OAUTH_TOKEN=your_oauth_token_here

# Path to the spreadsheet file on Yandex.Disk
YANDEX_FILE_PATH=/RandomCoffee.xlsx

# Sheet names in the spreadsheet
SHEET1_NAME=RandomCoffee
SHEET2_NAME=History

# Base text for pairing rounds (will auto-increment like "Random Coffee #1", "Random Coffee #2", etc.)
# The system automatically detects the highest round number and increments it
PAIRING_TEXT=Random Coffee

# Number of days to check for recent pairings (to avoid repeated pairs)
HISTORY_CHECK_DAYS=365
